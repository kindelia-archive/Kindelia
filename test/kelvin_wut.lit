file inc @ count : #word = #0

bond inc(): & #word {
  get x = count
  let res : #word = +(x, #1)
  set count = res
  return res
}

eval {
    run a : #word = inc()  // should be 1
    run b : #word = inc()  // should be 2
    return a  // returns 1
} : & #word

eval {
    set count = #0
    
    run inc()
    get a = count // should be 1
    run inc()
    get b = count // should be 2
    return a  // returns 1
} : & #word

save
