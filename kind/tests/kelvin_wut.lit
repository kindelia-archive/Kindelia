name a
name b

name get_count
name inc_count

bond get_count(): #word {
  #0
} @inc_count

bond inc_count(): & #word {
  bind get_count {
    +(get_count(), #1)
  }
  return #0
}

eval {
    run inc_count()
    let a : #word = get_count()  // should be 1
    run inc_count()
    let b : #word = get_count()  // should be 2
    return a  // returns 2
} : & #word
